<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/cc_background_1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/app_img"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:src="@drawable/ahual" />


            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:text="你好，智慧茄子种植基地"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_year_month_day_week"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:text="2024年7月18日 星期四"
                    android:textColor="#8a8a8a"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <Button
                android:id="@+id/message_history"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/cc_tongzhi"
                android:gravity="right"
                android:text=""></Button>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/tianqi_2"
                        android:text=""></Button>

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/tianqi_1"
                        android:text=""></Button>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="晴转多云"
                        android:textColor="#8a8a8a"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:layout_weight="1"
                        android:text="|"
                        android:textColor="#8a8a8a"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:layout_weight="1"
                        android:text="气温31℃"
                        android:textColor="#8a8a8a"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="|"
                        android:layout_weight="1"
                        android:textColor="#8a8a8a"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:layout_weight="1"
                        android:text="湿度70%"
                        android:textColor="#8a8a8a"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>